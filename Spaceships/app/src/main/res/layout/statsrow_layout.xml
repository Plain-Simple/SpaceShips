<?xml version="1.0" encoding="utf-8"?>
<!-- a row displaying the label of the stat and its value. Populates stats_layout
in StatsActivity -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"> <!-- todo: also fill parent? -->
    <com.plainsimple.spaceships.view.FontTextView
        android:id="@+id/statitem_label"
        style="@style/GalaxyMonkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/orange"
        android:textSize="20dp"/>
    <com.plainsimple.spaceships.view.FontTextView
        android:id="@+id/statitem_value"
        style="@style/GalaxyMonkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/orange"
        android:textSize="20dp"/>
</RelativeLayout>