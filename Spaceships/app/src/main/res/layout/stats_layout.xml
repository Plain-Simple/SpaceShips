<?xml version="1.0" encoding="utf-8"?>
<!-- StatsActivity layout. Displays a ListView with formatted statistics -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- "Game Statistics" centered at the top -->
    <com.plainsimple.spaceships.view.FontTextView
        style="@style/GalaxyMonkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:textSize="30dp"
        android:textColor="@color/orange"
        android:text="Game Statistics"/>
    <!-- displays formatted stats in rows -->
    <ListView
        android:id="@+id/stats_list_view"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    </ListView>
</LinearLayout>