<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <!-- Displays game graphics -->
        <com.plainsimple.spaceships.view.GameView
            android:id="@+id/spaceships"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
            <!-- Overlay on game graphics with UI components -->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <!-- pause button -->
                <ImageButton
                    android:id="@+id/pausebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="onPausePressed"
                    style="?android:attr/borderlessButtonStyle" />
                <!-- mute button -->
                <ImageButton
                    android:id="@+id/mutebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/pausebutton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="onMutePressed"
                    style="?android:attr/borderlessButtonStyle" />
                <!-- bullet fire selector -->
                <ImageButton
                    android:id="@+id/toggleBulletButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="30dp"
                    android:onClick="onToggleBulletPressed"
                    style="?android:attr/borderlessButtonStyle" />
                <!-- rocket fire selector -->
                <ImageButton
                    android:id="@+id/toggleRocketButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/toggleBulletButton"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="30dp"
                    android:onClick="onToggleRocketPressed"
                    style="?android:attr/borderlessButtonStyle" />
                <!-- "resume" button, displays when game is paused
                <com.plainsimple.spaceships.view.FontButton
                    style="@style/GalaxyMonkey.MenuStyle"
                    android:id="@+id/resumeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35dp"
                    android:textColor="#ffb30f"
                    android:text="@string/resume"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:onClick="onPausePressed"/>
                 "quit" button, displays when game is paused --> <!-- todo: finish these
                <com.plainsimple.spaceships.view.FontButton
                    style="@style/GalaxyMonkey.MenuStyle"
                    android:id="@+id/quitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35dp"
                    android:textColor="#ffb30f"
                    android:text="@string/quit"
                    android:layout_below="@id/resumeButton"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:onClick="onQuitPressed"/>
                 "paused" textview, displays when game is paused
                <com.plainsimple.spaceships.view.FontTextView
                    style="@style/GalaxyMonkey"
                    android:id="@+id/pausedNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="55dp"
                    android:textColor="#ffb30f"
                    android:text="@string/paused"
                    android:layout_above="@id/resumeButton"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:onClick="onPausePressed"/>-->
                <!-- place-holder to align up and down arrows -->
                <TextView
                    android:id="@+id/arrowPlaceHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>
                <!-- up arrow key if gyro movement disabled -->
                <ImageButton
                    android:id="@+id/up_arrow"
                    android:src="@drawable/up_arrow_states"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_above="@id/arrowPlaceHolder"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle" />
                <!-- down arrow key if gyro movement disabled -->
                <ImageButton
                    android:id="@+id/down_arrow"
                    android:src="@drawable/down_arrow_states"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/arrowPlaceHolder"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle" />
        </RelativeLayout>

</RelativeLayout>