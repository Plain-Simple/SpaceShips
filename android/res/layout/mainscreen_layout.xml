<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_graphic" >
    <!-- Play Button -->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_play"
        android:background="@drawable/menubutton_custom"
        android:onClick="onPlayPressed"
        style="@style/MenuStyle" />
    <!-- Store Button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_store"
        android:onClick="onStorePressed"
        android:background="?android:attr/selectableItemBackground"
        style="@style/MenuStyle" />
    <!-- Stats Button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_stats"
        android:onClick="onStatsPressed"
        android:background="?android:attr/selectableItemBackground"
        style="@style/MenuStyle" />
</LinearLayout>