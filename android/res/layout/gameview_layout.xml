<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <!-- Displays game graphics -->
    <plainsimple.spaceships.GameView
        android:id="@+id/spaceships"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <!-- Overlay on game graphics with UI components -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/pausebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:onClick="onPausePressed"
            style="?android:attr/borderlessButtonStyle" />
        <ImageButton
            android:id="@+id/toggleBullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bullets_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="onToggleBulletPressed"
            style="?android:attr/borderlessButtonStyle" />
        <ImageButton
            android:id="@+id/toggleRocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rockets_button"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/toggleBullet"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="onToggleRocketPressed"
            style="?android:attr/borderlessButtonStyle" />
    </RelativeLayout>
</FrameLayout>